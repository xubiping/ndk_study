<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".cpp.second.JavaNativityActivity"
    >
    <GridLayout
        android:id="@+id/grid_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:columnCount="2">
        <TextView
            android:layout_columnSpan="2"
            android:layout_columnWeight="1"
            android:padding="8dp"
            android:gravity="center"
            android:text="练习"/>

        <Button
            android:id="@+id/getNativeArray"
            android:textAllCaps="false"
            android:text="获取数组"/>

        <TextView
            android:id="@+id/get_native_array_text"
            android:layout_columnWeight="5"
            android:text="-"/>

        <Button
            android:id="@+id/formatArray"
            android:textAllCaps="false"
            android:text="格式化输出"/>

        <TextView
            android:id="@+id/format_array_text"
            android:layout_columnWeight="5"
            android:text="-"/>

        <Button
            android:id="@+id/calcScorePass"
            android:textAllCaps="false"
            android:text="计算成绩"/>

        <TextView
            android:id="@+id/calc_score_pass_text"
            android:layout_columnWeight="5"
            android:text="-"/>

        <Button
            android:id="@+id/calcTotalMoney"
            android:textAllCaps="false"
            android:text="计算价格"/>

        <TextView
            android:id="@+id/calc_total_money_text"
            android:layout_columnWeight="5"
            android:text="-"/>

        <View
            android:layout_columnSpan="2"
            android:layout_columnWeight="1"
            android:layout_height="1dp"
            android:background="@color/purple_500"/>

        <Button
            android:id="@+id/javaClassTest"
            android:textAllCaps="false"
            android:text="Java Class"/>

        <TextView
            android:id="@+id/native_java_object_text"
            android:layout_row="7"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:layout_columnWeight="1"
            android:text="-"
            />
    </GridLayout>
    <TextView
        android:id="@+id/log_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/grid_layout"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="second demo"
        />

</androidx.constraintlayout.widget.ConstraintLayout>