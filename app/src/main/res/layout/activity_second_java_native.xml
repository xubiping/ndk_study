<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".cpp.second.JavaNativityActivity"
    >
    <GridLayout
        android:id="@+id/grid_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:columnCount="2">
        <Button
            android:id="@+id/charconcattest"
            android:textAllCaps="false"
            android:text="A + B + C"
            />
        <TextView
            android:id="@+id/char_concat_text"
            android:layout_columnWeight="5"
            android:text="_"
            />
        <Button
            android:id="@+id/sumTest"
            android:textAllCaps="false"
            android:text="x+y"
            />
        <TextView
            android:id="@+id/sum_text"
            android:layout_columnWeight="5"
            android:text="_"
            />
        <Button
            android:id="@+id/twoexptest"
            android:textAllCaps="false"
            android:text="2^10"
            />
        <TextView
            android:id="@+id/two_exp_text"
            android:layout_columnWeight="5"
            android:text="_"
            />
        <Button
            android:id="@+id/calcMoneyTest"
            android:textAllCaps="false"
            android:text="how much"
            />
        <TextView
            android:id="@+id/calc_money_text"
            android:layout_columnWeight="5"
            android:text="_"
            />
    </GridLayout>
    <TextView
        android:id="@+id/log_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/grid_layout"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="second demo"
        />

</androidx.constraintlayout.widget.ConstraintLayout>